apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
    name: nginx
spec:
  ingressClassName: alb
  tls:
    - hosts:
      - nginx.{{ dnsName }}
  rules:
    - host: nginx.{{ dnsName }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: nginx
                port:
                  number: 80
